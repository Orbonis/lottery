{
    "compilerOptions": {
        "target": "es6",
        "moduleResolution": "node",
        "jsx": "react",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "baseUrl": ".",
        "resolveJsonModule": true,
        "paths": {
            "src": [
                "src"
            ],
            "core": [
                "libs/*/src"
            ]
        }
    }
}